def minSubArrayLen(target, nums):
    left = 0
    s = 0
    res = float('inf')

    for right in range(len(nums)):
        s += nums[right]
        while s >= target:
            res = min(res, right-left+1)
            s -= nums[left]
            left += 1

    return 0 if res == float('inf') else res

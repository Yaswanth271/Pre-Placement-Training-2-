class Solution(object):
    def findPairs(self, nums, k):
        """
        :type nums: List[int]
        :type k: int
        :rtype: int
        """
        count=0
        map={}
        for num in nums:
            map[num]=map.get(num,0)+1
        for num in map:
            if k==0:
                if map[num]>=2:
                    count+=1
            else:
                if num+k in map:
                    count+=1
        return count
